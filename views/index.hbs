<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index page</title>
    <link rel="stylesheet" href="index.css">
</head>


<body>
    <div class="header">
        <h1> ATN Shop</h1>
    </div>

    <div class="content">

        <div class="search">
            <br>
            <div class="btn-option">
                <form action="/search" method="POST" style="text-align: center;">
                    <input type="text" name="txtName" placeholder="Input name product">
                    <input class="btn-option" type="submit" value="Search" name="Search">
                </form>

            </div>

        </div>
        <br>
        <br>
        <form action="/insert" class="btn-option1">
            <input class="btn-option" type="submit" name="insert" value="Create new product">
        </form>
        <br>
        <br>

        <table class="tb1-product">
            <tr>
                <th>Number</th>
                <th>Name</th>
                <th>Price</th>
                <th>Color</th>
                <th>Materia</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
            {{# each model}}
            <tr>
                <td>{{Number}}</td>
                <td>{{Name}} </td>
                <td>{{Price}}</td>
                <td>{{Color}}</td>
                <td>{{Material}}</td>
                <td>{{Description}}</td>
                <td>
                    <form action=""></form>
                    <form action=""></form>
                    <a href="/delete?id={{_id}}">Delete</a>
                    <a href="/edit?id={{_id}}">Edit</a></li>
                </td>

            </tr>
            {{/ each}}
        </table>

    </div>
    <br>
    <div id="footer">
        <footer class="footer">
            <h1>Copyright by VuNgocTu - 2021</h1>
        </footer>
    </div>

    <script>
        function cfDelete() {
            var del = confirm("Do you want to delete this product?");
            if (del) {
                return true;
            } else {
                return false;
            }
        }
    </script>

</body>

</html>
